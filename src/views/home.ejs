          </td>
        </tr>
    <% } %> -->
    <% listUsers.forEach(function(user) { %>
<tr>
          <td><%= user.id %></td>
          <td><%= user.email %> Griffin</td>
          <td><%= user.name  %> $100</td>
          <td><%= user.city %> $100</td>
          <td>
            <a  href="/update/<%= user.id %>" >Edit</a>
            <form action="/delete-user/<%= user.id %>" method="POST">
              <button>Delete</button>
            </form>
          </td>
        </tr> <% }); %> 
      </table>
    </div>
  </body>
</html>
